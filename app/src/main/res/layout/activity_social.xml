<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#63C272"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:elevation="4dp">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_social_group" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="หน้าโซเชียล"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:paddingBottom="80dp"
        android:clipToPadding="false">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            
            <!-- ช่องพิมพ์โพสต์ -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="คุณกำลังคิดอะไรอยู่..."
                        android:background="@null"
                        android:minHeight="60dp"
                        android:gravity="top"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_camera" android:background="?attr/selectableItemBackgroundBorderless" app:tint="#63C272"/>
                        <ImageButton android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_gallery" android:background="?attr/selectableItemBackgroundBorderless" android:layout_marginStart="8dp" app:tint="#63C272"/>
                        <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                        <Button android:layout_width="wrap_content" android:layout_height="40dp" android:text="โพสต์" android:backgroundTint="#000" app:cornerRadius="20dp" android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ตัวอย่างโพสต์ที่ 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="สมชาย สายบุญ" android:textStyle="bold" android:textColor="#000"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="เมื่อ 2 ชม. ที่แล้ว" android:textSize="10sp" android:layout_marginBottom="8dp"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="วันนี้มาไหว้หลวงปู่เอี่ยมที่วัดสะพานสูง คนเยอะมากครับ แต่บรรยากาศดีสุดๆ" android:textColor="#333"/>
                    <ImageView android:layout_width="match_parent" android:layout_height="200dp" android:src="@drawable/temple" android:scaleType="centerCrop" android:layout_marginTop="12dp" android:background="#EEE"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ตัวอย่างโพสต์ที่ 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="กะทิ รีวิว" android:textStyle="bold" android:textColor="#000"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="เมื่อ 5 ชม. ที่แล้ว" android:textSize="10sp" android:layout_marginBottom="8dp"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="แนะนำร้านก๋วยเตี๋ยวดูดี คลองพระอุดมครับ รสชาติดีมาก ไม่ต้องปรุงเลย!" android:textColor="#333"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Bar Section (เมนูเด้ง) -->
    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#76C479" />
        <androidx.cardview.widget.CardView
            android:id="@+id/menuContainer"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="6dp">
                <LinearLayout
                    android:id="@+id/hiddenMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <ImageView android:id="@+id/btnNavProfile" android:layout_width="52dp" android:layout_height="52dp" android:padding="12dp" android:src="@drawable/ic_person" app:tint="#000000" />
                    <ImageView android:id="@+id/btnNavHome" android:layout_width="52dp" android:layout_height="52dp" android:padding="12dp" android:src="@drawable/ic_home" app:tint="#000000" />
                    <ImageView android:id="@+id/btnNavMap" android:layout_width="52dp" android:layout_height="52dp" android:padding="12dp" android:src="@android:drawable/ic_dialog_map" app:tint="#000000" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/btnNavSocial"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_social_group"
                    app:tint="#76C479" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>